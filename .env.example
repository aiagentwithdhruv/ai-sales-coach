# ===========================================
# QuotaHit - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your API keys

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase (REQUIRED)
# ===========================================
# Get from: https://supabase.com/dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres.your-project:password@aws-0-region.pooler.supabase.com:6543/postgres

# ===========================================
# AI Provider API Keys (at least one required)
# ===========================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# OpenRouter (100+ models) - https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key

# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Perplexity (for Research page) - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# Moonshot AI / Kimi - https://platform.moonshot.cn/
MOONSHOT_API_KEY=sk-your-moonshot-api-key

# Google AI (for Gemini voice widget) - https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ===========================================
# AI Configuration
# ===========================================

# Default chat provider: openai | anthropic | openrouter
AI_CHAT_PROVIDER=openrouter
AI_OPENAI_MODEL=gpt-4-turbo
AI_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
AI_OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
AI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# Twilio (for AI Calling)
# ===========================================
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Deepgram (for Speech-to-Text)
# ===========================================
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key

# ===========================================
# Text-to-Speech
# ===========================================
# ElevenLabs - https://elevenlabs.io
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key
# TTS Provider: elevenlabs | openai
TTS_PROVIDER=openai

# ===========================================
# Resend (for Email / Follow-ups)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key

# ===========================================
# Stripe (for Billing)
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_TEAM_PRICE_ID=price_your-team-price-id
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ===========================================
# Inngest (for Agent Orchestration)
# ===========================================
# Get from: https://app.inngest.com/
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# ===========================================
# Zoho CRM Integration (optional)
# ===========================================
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_ACCOUNTS_DOMAIN=https://accounts.zoho.com
ZOHO_API_DOMAIN=https://www.zohoapis.com

# ===========================================
# Gamma API (for PPT generation - optional)
# ===========================================
GAMMA_API_KEY=your-gamma-api-key

# ===========================================
# Webhooks
# ===========================================
SALES_AGENT_WEBHOOK_URL=https://your-n8n.cloud/webhook/sales-agent-leads
FEEDBACK_WEBHOOK_URL=https://your-n8n.cloud/webhook/feedback-widget

# ===========================================
# Feature Flags
# ===========================================
ENABLE_AI_FEATURES=true
ENABLE_CALL_ANALYSIS=true
ENABLE_RAG_PLAYBOOK=true
